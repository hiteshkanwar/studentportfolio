<% if params[:role] == "school" %>
<div>

   <div class="form-group">
	   <%=label_tag :school_name ,"School Name",:class=>"col-sm-2 control-label"%>
	<div class="col-sm-10">
	     <%=text_field_tag :school_name ,nil,:class=>"form-control"%>
     </div>
   </div>
   
<div class="form-group">
	<%= label_tag :description, "School Description",:class=>"col-sm-2 control-label" %>
	  <div class="col-sm-10">
	    <%= text_area_tag :description,nil,:cols=>"34" ,:class=>"form-control"%>
     </div>
  </div>
</div>
<% elsif params[:role] == "student" %>
 

<div class="form-group">
  <%= label_tag :name, "Student Description",:class=>"col-sm-2 control-label" %>
  <div class="col-sm-10">
  <%= text_area_tag :description,nil,:cols=>"34" ,:class=>"form-control"%>
  </div>
  </div>
<% end %>

